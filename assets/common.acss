/*弹性布局*/

.flex_col {
  display: flex;
  flex-direction: column;
}

.flex_row {
  display: flex;
  flex-direction: row;
}

/**** 统一提示弹出层 ****/
.tipFloat{
  width: 50%;
  text-align: center;
  padding: 50rpx;
  background-color: rgba(0,0,0,.7);
  position: absolute;
  top: 300rpx;
  left: 25%;
  border-radius: 6rpx;
}
.tipFloat text{
  color: #fff;
  font-size: 70rpx;
}
.tipFloat view{
  color: #fff;
  margin-top: 20rpx;
}


/***** 没有封面图情况 ******/
.noImage{
  background-color: #eee;
  width: 100%;
  height: 420rpx;
  text-align: center;
}
.noImage text{
  color: #666;
  font-size: 160rpx;
  line-height: 420rpx;
}
.a-button{
  background: none;
  margin: 0;
  padding: 0;
  outline:none;
  border: none;
  height: 60px;
  line-height: 60px;
}
.a-input{
  color:#fff;
  background: none;
}
