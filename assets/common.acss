/***  渐变按钮  ***/
/** 小 **/
.btn1{
  background: linear-gradient(to right top,#ff2526,#ff417f);
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 4rpx;
  color: #fff;
  text-align: center;
}


/*短红背景按钮  */
.btndred{ height:68rpx; line-height: 68rpx; text-align: center; color: #fff;  background: #ff2741; border-radius: 4rpx;}

/*短红背景圆角按钮  */
.btndredx{ height:90rpx; line-height: 90rpx; text-align: center;color: #fff;  background: #ff2741; border-radius: 4rpx;}

/*通屏红背景按钮  */
.btnrtred{ height:100rpx; line-height: 100rpx; text-align: center;color: #fff;  background: #ff2741; border-radius: 4rpx;}

/*通屏灰背景按钮  */
.btnrth{ height:100rpx; line-height: 100rpx; text-align: center; border-radius: 4rpx;}  

/* 底部红背景按钮 */
.btnrbred{ height:100rpx; line-height: 100rpx;text-align: center; color: #fff;  background: #ff2741;}

/* 蓝白渐变色背景按钮  */
.btnblue {text-align: center; color: #fff;background: linear-gradient(to right,#63b8ff,#88B6E7 )}


/*button初始化  */
.a-button::after{ border:0}
